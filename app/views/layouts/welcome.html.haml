/[if IE 9]      <html class="no-js lt-ie10 lt-ie9" lang="en-us">
/[if lt IE 10]  <html class="no-js lt-ie10" lang="en-us">
%html{lang: 'en', class: 'no-js'}
  %head
    %title= "#{t('app_title')} - #{yield :title}"
    %meta(http-equiv="content-type" content="text/html" charset="utf-8")
    %meta(http-equiv="x-ua-compatible" content="ie=edge,chrome=1")
    %meta(name="description" content="")
    %meta(name="author" content="")
    %meta{content: 'initial-scale=1.0,user-scalable=no,maximum-scale=1,width=device-width', name: 'viewport'}
    %meta(name="viewport" content="initial-scale=1.0,user-scalable=no,maximum-scale=1" media="(device-height: 568px)")
    %meta(name='apple-mobile-web-app-capable' content='yes')
    %meta(name='apple-mobile-web-app-status-bar-style' content='translucent-black')

    %link(rel="shortcut icon" href="/assets/favicon.ico")

    / Stylesheets (Don't change include order)
    = stylesheet_link_tag '//netdna.bootstrapcdn.com/font-awesome/3.2.0/css/font-awesome.min.css',
                          'welcome',
                          'data-turbolinks-track' => true
    = yield :head

  %body
    #navbar.navbar.navbar-default.navbar-fixed-top
      %a.navbar-brand{:href => '#'}
        %i.icon-tasks
        Ganban
      %ul.nav.navbar-nav.pull-right
        %li= link_to 'GitHub Repo', 'https://github.com/railsrumble/r13-team-357'
        %li= link_to 'Blog', 'http://ganban.tumblr.com/'

    .container
      = yield

    %footer#footer
      .container
        %ul.nav.navbar-nav
          %li= link_to 'GitHub Repo', 'https://github.com/railsrumble/r13-team-357'
          %li= link_to 'Blog', 'http://ganban.tumblr.com/'
        .pull-right
          %ul.nav.navbar-nav
            %li= link_to @version, '/version.txt'

    = javascript_include_tag 'welcome', 'data-turbolinks-track' => true