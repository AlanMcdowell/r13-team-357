- content_for :toolbar do
  = link_to edit_project_path(@project ), class: 'btn btn-default' do
    %i.icon-pencil
    = t('action_button.edit')
.panel.panel-default
  .panel-heading
    %i.icon-edit.icon-large
    = t('tt.show', resource_name: Project.model_name.human)
  .panel-body
    = show_for @project do |s|
      = s.attribute :name
      = s.attribute :archive
      = s.association :owner
