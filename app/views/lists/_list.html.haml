.panel.panel-default.project-list{id: list.id}
  .panel-heading
    %strong= list.name
    .panel-tools
      .btn-group
        %a.btn.add-card-btn{href: '#', data: {target: 'add-card-form-1'}}
          %i.icon-plus
          Add a card
    = simple_form_for list.cards.new, remote: true do |f|
      = f.input :list_id, input_html: {value: list.id}, as: :hidden
      = f.input :title, input_html: {id: "list-#{list.id}-title-input"}, as: :text, label: false, placeholder: 'Type card details...'
      = f.submit 'Create', class: 'btn btn-success'
      %a{href: '#'} Cancel

    .clearfix
  .panel-body.project-list-item{id: "list-#{list.id}"}
    =render list.cards.order('sort asc')
