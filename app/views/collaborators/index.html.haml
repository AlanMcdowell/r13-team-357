
.panel.panel-default
  .panel-heading
    %i.icon-edit.icon-large
    = yield :form_title
  .panel-body
    = simple_form_for @project_user, url: project_collaborators_path, method: :post do |f|
      = f.error_notification

      .form-inputs

        = f.input :project_id, as: :hidden, value: @project.id
        = f.text_field :user_id, id: 'search_users', :class => 'search-query form-control',  :placeholder => "#{t('search')}...", data: {autocomplete_source: auto_users_projects_path}
        -#=f.autocomplete_field :user, auto_user_projects_path

      .form-actions
        = f.button :submit, class: 'btn btn-default'
        = link_to t('cancel'), projects_path, class: 'btn'
