.panel.panel-default
  .panel-heading
    %i.icon-edit.icon-large
    = yield :form_title
  .panel-body
    = simple_form_for(@card.checklists.new, remote: true) do |f|
      = f.error_notification

      .form-inputs
        = f.input :card_id, input_html: {value: @card.id}, as: :hidden
        = f.input :title, label: false

      .form-actions
        = f.button :submit, class: 'btn btn-default'
        = link_to t('cancel'), checklists_path, class: 'btn'
